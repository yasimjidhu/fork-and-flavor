{
  "compilerOptions": {
    "target": "ESNext", // Use ESNext for modern JavaScript features
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Match the latest libraries
    "allowJs": true,
    "types": ["next", "node"], // Add "node" for Node.js typings
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext", // Ensure compatibility with ES modules
    "moduleResolution": "Node", // Change from "bundler" to "Node" for better resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Optional: Ensures relative paths resolve correctly
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
